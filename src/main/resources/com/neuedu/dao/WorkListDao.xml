<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neuedu.dao.WorkListDao">
	<resultMap type="WorkList" id="workListMap">
		<result column="id" property="id"></result>
<result column="al_id" property="alId"></result>
<result column="s_id" property="sId"></result>
<result column="count" property="count"></result>
<result column="is_del" property="isDel"></result>

	</resultMap>
	<sql id="selectFields">
		<choose>
 				<when test="fields==null">
 					 id, al_id, s_id, count, is_del 
 				</when>
 				<otherwise>
 					${fields}
 				</otherwise>
 			</choose>
	</sql>
 	<select id="getWorkLists" resultMap="workListMap" parameterType="WorkList">
 		select
 			<include refid="selectFields"></include>
 		from work_list 
 		<where>
 			<if test="where!=null">
    			and ${where}
    		</if>
 		</where>
 		<if test="orderBy!=null">
    		order by ${orderBy}
    	</if>
 		<if test="withPage==1">
 			limit #{pageStart},#{pageSize}
 		</if>
 	</select>
     <insert id="add" parameterType="WorkList">
     	insert into 
     		work_list
     		<trim prefix="(" suffix=")" suffixOverrides=",">
	     		<if test="id!=null">
id,
</if>
<if test="alId!=null">
al_id,
</if>
<if test="sId!=null">
s_id,
</if>
<if test="count!=null">
count,
</if>
<if test="isDel!=null">
is_del,
</if>

     		</trim>
     		<trim prefix="values (" suffix=")" suffixOverrides=",">
     			<if test="id!=null">
#{id},
</if>
<if test="alId!=null">
#{alId},
</if>
<if test="sId!=null">
#{sId},
</if>
<if test="count!=null">
#{count},
</if>
<if test="isDel!=null">
#{isDel},
</if>

     		</trim>
     </insert>
     <update id="update" parameterType="WorkList">
     	update work_list 
     	<set>
	     	<if test="id!=null">
id=#{id},
</if>
<if test="alId!=null">
al_id=#{alId},
</if>
<if test="sId!=null">
s_id=#{sId},
</if>
<if test="count!=null">
count=#{count},
</if>
<if test="isDel!=null">
is_del=#{isDel},
</if>

     	</set>
     	 where id=#{id}
     </update>
     <delete id="del" parameterType="java.lang.Integer">
     	update  work_list set is_del=0 where id=#{1}
     </delete>
     <select id="getWorkListById" resultMap="workListMap" parameterType="WorkList">
     	select 
     	<include refid="selectFields"></include> 
     	from work_list where id=#{id}
     </select>
     <select id="getCount" parameterType="WorkList" resultType="java.lang.Integer">
     	select count(1) from  work_list 
     	<where>
     		<if test="where!=null">
    			and ${where}
    		</if>
     	</where>
     </select>
</mapper>
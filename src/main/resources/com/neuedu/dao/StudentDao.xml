		<result column="is_del" property="isDel"></result>
	</resultMap>
	<sql id="selectFields">
		<choose>
 				<when test="fields==null">
 					 id, name, gender, nation, sale, school, specialty, education, qq, address, email, room_no, cycle, refund, phone, id_card, we_char,status, g_id, is_del 
 				</when>
 				<otherwise>
 					${fields}
 				</otherwise>
 			</choose>
	</sql>
 	<select id="getStudents" resultMap="studentMap" parameterType="Student">
 		select
 			<include refid="selectFields"></include>
 		from student 
 		<where>
 			<if test="gId!=null">
 				and g_id=#{gId}
 			</if>
 			<if test="where!=null">
    			and ${where}
    		</if>
 		</where>
 		<if test="orderBy!=null">
    		order by ${orderBy}
    	</if>
 		<if test="withPage==1">
 			limit #{pageStart},#{pageSize}
 		</if>
 	</select>
